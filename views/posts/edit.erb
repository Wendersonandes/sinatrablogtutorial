<h2>Create Post</h2>

<br>

<form action="/posts/<%=@post.id %>" method="post" role="form">
	<div class="form-group">
		<input type="hidden" name="_method" value="put">
		<label for="post_title">Title</label>
		<br>
		<input id="post_title" class="post_title" type="text" value="<%= @post.title%>" style="width=90%" name="post[title]" />
	</div>
	<div class="form-group">
		<label for="post_body">Body</label>
		<br>
		<textarea id="post_body" class="post_body" type="text" value="" style="width=90%" name="post[body]" rows="10" /> <%= @post.body %> </textarea>
	</div>
	<button class="btn btn-success" type="submit">Submit</button>
</form>
